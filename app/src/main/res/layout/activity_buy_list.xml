<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG"
    android:orientation="vertical"
    tools:context=".BuyList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/other_card"
        android:backgroundTint="@color/grey_main">

        <TextView
            android:id="@+id/textView"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/buy_list" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:contentDescription="scroll"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_card"
                android:backgroundTint="@color/grey_main"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:text="Бутер"
                    android:textSize="22sp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:backgroundTint="@color/bright_orange"
                    app:cornerRadius="40dp">

                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_card"
                android:backgroundTint="@color/grey_main"
                android:padding="15dp">
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Подушечки с шоколадом" />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/bright_orange"
                    app:cornerRadius="40dp">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_card"
                android:backgroundTint="@color/grey_main"
                android:padding="15dp">
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="@string/lorem" />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/bright_orange"
                    app:cornerRadius="40dp">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/list_card"
                android:backgroundTint="@color/grey_main"
                android:padding="15dp">
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Зеркало" />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/bright_orange"
                    app:cornerRadius="40dp">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="280dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/bright_orange"
        android:text="@string/add_button"
        android:textColor="@color/white"
        app:cornerRadius="40dp">

    </Button>

</LinearLayout>